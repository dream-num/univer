    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Sheet (Chrome)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3002/sheets/",
            "webRoot": "${workspaceFolder}/examples/local/sheets",
            "presentation": {
                "group": "0_example",
                "order": 2
            }
        },
        {
            "name": "Launch Sheet (Edge)",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3002/sheets",
            "webRoot": "${workspaceFolder}/examples/sheets/local/",
            "presentation": {
                "group": "0_example",
                "order": 1
            }
        },
        {
            "name": "Launch Doc (Chrome)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3002",
            "webRoot": "${workspaceFolder}/examples/local/docs",
            "presentation": {
                "group": "0_example",
                "order": 4
            }
        },
        {
            "name": "Launch Doc (Edge)",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3002",
            "webRoot": "${workspaceFolder}/examples/local/docs",
            "presentation": {
                "group": "0_example",
                "order": 3
            }
        },
        {
            "name": "Launch Slide (Chrome)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3004",
            "webRoot": "${workspaceFolder}/examples/slides/local/",
            "presentation": {
                "group": "0_example",
                "order": 6
            }
        },
        {
            "name": "Launch Slide (Edge)",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3004",
            "webRoot": "${workspaceFolder}/examples/slides/local/",
            "presentation": {
                "group": "0_example",
                "order": 5
            }
        },
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "args": ["--runInBand", "--watchAll=false"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            }
        }
    ]
}
