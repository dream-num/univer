{
    "name": "univer",
    "version": "0.1.0-alpha.0",
    "private": true,
    "scripts": {
        "test": "turbo test -- --passWithNoTests",
        "coverage": "turbo coverage -- --passWithNoTests",
        "dev:sheet": "turbo dev:demo --filter ./examples/sheets",
        "dev:slide": "turbo dev:demo --filter ./examples/slides",
        "dev:doc": "turbo dev:demo --filter ./examples/docs",
        "dev": "turbo dev:demo --filter ./examples/docs --filter ./examples/sheets --filter ./examples/slides",
        "build": "turbo esbuild",
        "build:demo": "turbo esbuild:demo",
        "prepare": "husky install",
        "pre-commit": "lint-staged",
        "lint": "eslint --cache packages/**/src/**/*.{tsx,ts}",
        "lint:style": "stylelint **/*.less",
        "lint:fix": "eslint packages/**/src/**/*.{tsx,ts} --fix",
        "storybook": "storybook dev -p 6006 --no-open",
        "build:storybook": "storybook build",
        "dev:site": "turbo dev:docusaurus"
    },
    "engines": {
        "node": "^18.17.0",
        "pnpm": "^8.6.2"
    },
    "author": "DreamNum Inc. <developer@univer.ai>",
    "license": "MIT",
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@commitlint/cli": "^18.4.3",
        "@commitlint/config-conventional": "^18.4.3",
        "@storybook/addon-docs": "^7.6.3",
        "@storybook/addon-essentials": "^7.6.3",
        "@storybook/addon-interactions": "^7.6.3",
        "@storybook/addon-links": "^7.6.3",
        "@storybook/blocks": "^7.6.3",
        "@storybook/react": "^7.6.3",
        "@storybook/react-vite": "^7.6.3",
        "@storybook/testing-library": "^0.2.2",
        "@swc/cli": "^0.1.63",
        "@swc/core": "^1.3.100",
        "@types/node": "^20.10.3",
        "@types/react": "^18.2.41",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "@univerjs/design": "workspace:*",
        "@vitejs/plugin-react": "^4.2.0",
        "esbuild": "^0.19.8",
        "esbuild-style-plugin": "^1.6.3",
        "eslint": "^8.55.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import-newlines": "^1.3.4",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-unused-imports": "^3.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "storybook": "^7.6.3",
        "stylelint": "^15.11.0",
        "stylelint-config-clean-order": "^5.2.0",
        "stylelint-config-prettier": "^9.0.5",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-standard-less": "^2.0.0",
        "ts-node": "^10.9.1",
        "turbo": "^1.10.16",
        "typescript": "^5.3.2"
    },
    "lint-staged": {
        "**/*.{js,ts,tsx}": [
            "eslint --fix"
        ],
        "**/*.less": [
            "stylelint --fix"
        ]
    }
}