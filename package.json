{
    "name": "univer",
    "type": "module",
    "version": "0.1.1",
    "private": true,
    "packageManager": "pnpm@8.6.2",
    "author": "DreamNum Inc. <developer@univer.ai>",
    "license": "Apache-2.0",
    "funding": {
        "type": "opencollective",
        "url": "https://opencollective.com/univer"
    },
    "homepage": "https://univer.ai",
    "repository": {
        "type": "git",
        "url": "https://github.com/dream-num/univer"
    },
    "bugs": {
        "url": "https://github.com/dream-num/univer/issues"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.5.0"
    },
    "scripts": {
        "prepare": "husky install",
        "pre-commit": "lint-staged",
        "dev:demo": "turbo dev:demo",
        "lint:types": "turbo lint:types",
        "test": "turbo test -- --passWithNoTests",
        "coverage": "turbo coverage -- --passWithNoTests",
        "build": "turbo build",
        "build:demo": "turbo build:demo",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "storybook:dev": "pnpm --filter @univerjs/storybook dev",
        "storybook:build": "pnpm --filter @univerjs/storybook build",
        "release": "release-it",
        "release:alpha": "release-it preminor --preRelease=alpha",
        "release:beta": "release-it preminor --preRelease=beta",
        "release:rc": "release-it prerelease --preRelease=rc"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^2.6.4",
        "@commitlint/cli": "^19.0.3",
        "@commitlint/config-conventional": "^19.0.3",
        "@playwright/test": "^1.42.1",
        "@release-it-plugins/workspaces": "^4.2.0",
        "@release-it/conventional-changelog": "^8.0.1",
        "@storybook/react": "8.0.0-rc.1",
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.61",
        "@univerjs/design": "workspace:*",
        "@univerjs/shared": "workspace:*",
        "@vitejs/plugin-react": "^4.2.1",
        "eslint": "^8.57.0",
        "eslint-plugin-format": "^0.1.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "release-it": "^17.1.1",
        "turbo": "^1.12.4",
        "typescript": "^5.3.3"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
